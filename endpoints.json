{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article with the specified id",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments with the specified article_id",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 18,
          "body": "This morning, I showered for nine minutes.",
          "article_id": 1,
          "author": "butter_bridge",
          "votes": 16,
          "created_at": "2020-07-21T00:20:00.000Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments the specified article's votes property and returns the article object",
    "exampleRequestBody": {
      "inc_votes": 15
    },
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 115,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "creates a comment with the specified article_id",
    "exampleRequestBody": {
      "author": "lurker", 
      "body": "lurker's new comment"
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 19,
          "body": "lurker's new comment",
          "article_id": 2,
          "author": "lurker",
          "votes": 0,
          "created_at": "2023-08-15T13:46:24.806Z"
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the comment with the specified comment_id",
    "exampleResponse": "204: No content"
  }
}
